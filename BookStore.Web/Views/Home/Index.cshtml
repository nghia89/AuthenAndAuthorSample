@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @{
        if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Account" asp-action="LogOut">LogOut</a>
            <h1 class="display-4">@User.Identity.Name</h1>
            foreach (var item in @User.Claims)
            {
                <h1>@item.Type</h1>
                <h2>@item.Value</h2>
            }
        }
    }

</div>
